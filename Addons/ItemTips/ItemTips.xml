<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
  <Script file="ItemTips.lua"/>
  <Script file="Locale.en.lua"/>
  <Frame name="ItemTips_Frame">
    <Scripts>
	<OnLoad>
		this:RegisterEvent("ADDON_LOADED");
	</OnLoad>
	<OnEvent>
		ItemTips:OnEvent(event);
	</OnEvent>
    </Scripts>
  </Frame>
  <GameTooltip name="ItemTips_Tooltip" inherits="GameTooltipTemplate">
    <Scripts>
	<Onload>
		this:SetOwner(ItemTips_Frame, "ANCHOR_NONE");
	</Onload>
    </Scripts>
  </GameTooltip>
</Ui>